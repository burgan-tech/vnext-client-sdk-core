{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amorphie.io/schemas/environment/environments",
  "title": "Environments Configuration",
  "description": "Uygulama başlatıldığında hangi environment (stage) ile çalışacağını ve authentication yapılandırmasını belirleyen konfigürasyon.",
  "type": "object",
  "required": ["multiStageMode", "defaultStage", "stages"],
  "properties": {
    "multiStageMode": {
      "type": "string",
      "description": "Multi-stage davranış modu",
      "enum": ["never", "onStartup", "onProfile"],
      "default": "never",
      "x-enumDescriptions": {
        "never": "Her zaman defaultStage kullanılır, kullanıcı değiştiremez",
        "onStartup": "Uygulama başlangıcında stage seçim workflow gösterilir",
        "onProfile": "Uygulama default ile başlar, profil sayfasından değiştirilebilir"
      }
    },
    "defaultStage": {
      "type": "string",
      "description": "Varsayılan stage key'i. stages array'indeki bir key ile eşleşmeli.",
      "minLength": 1,
      "examples": ["localhost", "pilot", "prod"]
    },
    "selector-workflow": {
      "$ref": "#/$defs/functionEndpoint",
      "description": "Stage seçimi için backend-driven workflow tanımı. multiStageMode='onStartup' olduğunda kullanılır."
    },
    "stages": {
      "type": "array",
      "description": "Kullanılabilir environment (stage) listesi",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/stage"
      }
    }
  },
  "additionalProperties": false,

  "$defs": {
    "requiredToken": {
      "type": "object",
      "description": "Endpoint çağrısı için gerekli token tanımı",
      "required": ["provider", "token"],
      "properties": {
        "provider": {
          "type": "string",
          "description": "Auth provider key'i",
          "examples": ["morph-idm", "edevlet", "burgan-yatirim"]
        },
        "token": {
          "type": "string",
          "description": "Token tipi",
          "examples": ["device", "1fa", "2fa", "access", "session"]
        }
      },
      "additionalProperties": false
    },

    "functionEndpoint": {
      "type": "object",
      "description": "Amorphie function endpoint tanımı. Client bu bilgilerle URL oluşturur.",
      "required": ["level", "domain", "workflow", "function"],
      "properties": {
        "runtime": {
          "type": "string",
          "description": "Workflow runtime versiyonu",
          "enum": ["v1", "v2"],
          "default": "v2"
        },
        "level": {
          "type": "string",
          "description": "Endpoint seviyesi",
          "enum": ["instance", "workflow", "domain"],
          "x-enumDescriptions": {
            "instance": "/{domain}/workflows/{workflow}/instances/{key}/functions/{function}",
            "workflow": "/{domain}/workflows/{workflow}/functions/{function}",
            "domain": "/{domain}/functions/{function}"
          }
        },
        "domain": {
          "type": "string",
          "description": "Workflow domain'i",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["discovery", "morph-idm", "loan"]
        },
        "workflow": {
          "type": "string",
          "description": "Workflow adı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["enviroment", "mobile-login", "device-register"]
        },
        "key": {
          "type": "string",
          "description": "Instance key (level='instance' olduğunda gerekli)",
          "examples": ["localhost", "pilot", "mobile-app"]
        },
        "function": {
          "type": "string",
          "description": "Function adı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["enviroment", "config"]
        },
        "requiredToken": {
          "type": "array",
          "description": "Bu endpoint'i çağırmak için gerekli token'lar (öncelik sırasına göre)",
          "items": { "$ref": "#/$defs/requiredToken" },
          "examples": [
            [
              { "provider": "morph-idm", "token": "1fa" },
              { "provider": "morph-idm", "token": "device" }
            ]
          ]
        }
      },
      "additionalProperties": false,
      "if": {
        "properties": { "level": { "const": "instance" } }
      },
      "then": {
        "required": ["level", "domain", "workflow", "key", "function"]
      }
    },

    "grantFlow": {
      "type": "object",
      "description": "Token almak için çalıştırılacak workflow",
      "required": ["runtime", "domain", "workflow"],
      "properties": {
        "runtime": {
          "type": "string",
          "enum": ["v1", "v2"],
          "default": "v2"
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "workflow": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "requiredToken": {
          "type": "array",
          "description": "Bu akışı başlatmak için gerekli token'lar",
          "items": { "$ref": "#/$defs/requiredToken" }
        }
      },
      "additionalProperties": false
    },

    "tokenType": {
      "type": "object",
      "description": "Bir token tipinin tanımı",
      "required": ["expiry"],
      "properties": {
        "expiry": {
          "type": "string",
          "description": "Token geçerlilik süresi",
          "examples": ["infinite", "90d", "5m", "1h"]
        },
        "grantFlow": {
          "oneOf": [
            { "$ref": "#/$defs/grantFlow" },
            { "type": "null" }
          ],
          "description": "Token almak için workflow. null ise otomatik alınır (örn: 1fa, 2fa sonrası)"
        },
        "refresh": {
          "oneOf": [
            {
              "type": "object",
              "required": ["endpoint", "strategy"],
              "properties": {
                "endpoint": { "type": "string" },
                "strategy": { "type": "string", "enum": ["rotating", "static"] },
                "beforeExpiry": { "type": "string", "description": "Expire'dan ne kadar önce refresh", "examples": ["1m", "30s"] }
              }
            },
            { "type": "null" }
          ],
          "description": "Token refresh ayarları"
        },
        "logout": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "endpoint": { "type": "string" },
                "autoLogoutAtBackground": { "type": "string", "description": "Background'da kalma süresi sonrası logout", "examples": ["5m"] },
                "autoLogoutAtInactivity": { "type": "string", "description": "İnaktivite süresi sonrası logout", "examples": ["15m"] }
              }
            },
            { "type": "null" }
          ],
          "description": "Logout ayarları"
        }
      },
      "additionalProperties": false
    },

    "authProviderNative": {
      "type": "object",
      "description": "Native (morph-idm) auth provider",
      "required": ["key", "type", "tokenTypes"],
      "properties": {
        "key": { "type": "string", "const": "morph-idm" },
        "type": { "type": "string", "const": "native" },
        "tokenTypes": {
          "type": "object",
          "description": "Token tipleri tanımları",
          "properties": {
            "device": { "$ref": "#/$defs/tokenType" },
            "1fa": { "$ref": "#/$defs/tokenType" },
            "2fa": { "$ref": "#/$defs/tokenType" }
          },
          "additionalProperties": { "$ref": "#/$defs/tokenType" }
        }
      },
      "additionalProperties": false
    },

    "authProviderOAuth2": {
      "type": "object",
      "description": "OAuth2 auth provider (e-devlet, Google, vb.)",
      "required": ["key", "type", "authorizationUrl", "tokenUrl", "clientId"],
      "properties": {
        "key": { "type": "string", "examples": ["edevlet", "google"] },
        "type": { "type": "string", "const": "oauth2" },
        "authorizationUrl": { "type": "string", "format": "uri" },
        "tokenUrl": { "type": "string", "format": "uri" },
        "clientId": { "type": "string" },
        "scopes": { "type": "array", "items": { "type": "string" } },
        "pkce": { "type": "boolean", "default": true },
        "tokenTypes": {
          "type": "object",
          "properties": {
            "access": { "$ref": "#/$defs/tokenType" },
            "refresh": { "$ref": "#/$defs/tokenType" }
          }
        },
        "tokenExchange": {
          "type": "object",
          "description": "External token'ı core token'a çevirmek için endpoint",
          "properties": {
            "endpoint": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },

    "authProviderApp2App": {
      "type": "object",
      "description": "App2App auth provider (native app açma)",
      "required": ["key", "type", "scheme"],
      "properties": {
        "key": { "type": "string", "examples": ["burgan-yatirim"] },
        "type": { "type": "string", "const": "app2app" },
        "scheme": { "type": "string", "description": "Deep link scheme", "examples": ["burganyatirim://auth"] },
        "fallbackUrl": { "type": "string", "format": "uri", "description": "App yüklü değilse yönlendirilecek URL" },
        "callbackScheme": { "type": "string", "description": "Geri dönüş scheme'i" },
        "tokenTypes": {
          "type": "object",
          "properties": {
            "session": { "$ref": "#/$defs/tokenType" }
          }
        },
        "tokenExchange": {
          "type": "object",
          "properties": {
            "endpoint": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },

    "authProviderWebview": {
      "type": "object",
      "description": "Webview auth provider (embedded login)",
      "required": ["key", "type", "url"],
      "properties": {
        "key": { "type": "string", "examples": ["fxtrade"] },
        "type": { "type": "string", "const": "webview" },
        "url": { "type": "string", "format": "uri" },
        "callbackPattern": { "type": "string" },
        "tokenTypes": {
          "type": "object",
          "properties": {
            "session": { "$ref": "#/$defs/tokenType" }
          }
        },
        "tokenExchange": {
          "type": "object",
          "properties": {
            "endpoint": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },

    "stage": {
      "type": "object",
      "description": "Bir environment (stage) tanımı",
      "required": ["key", "title", "baseUrl", "authProviders"],
      "properties": {
        "key": {
          "type": "string",
          "description": "Stage benzersiz tanımlayıcısı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["localhost", "pilot", "prod"]
        },
        "title": {
          "type": "string",
          "description": "Stage görünen adı (UI'da gösterilir)",
          "examples": ["Local Development", "Pilot", "Production"]
        },
        "baseUrl": {
          "type": "string",
          "description": "API base URL",
          "format": "uri"
        },
        "wsUrl": {
          "type": "string",
          "description": "WebSocket URL",
          "format": "uri"
        },
        "mqttUrl": {
          "type": "string",
          "description": "MQTT broker URL",
          "format": "uri"
        },
        "configEndpoint": {
          "$ref": "#/$defs/functionEndpoint",
          "description": "Client config endpoint tanımı"
        },
        "authProviders": {
          "type": "array",
          "description": "Auth provider'lar listesi",
          "items": {
            "oneOf": [
              { "$ref": "#/$defs/authProviderNative" },
              { "$ref": "#/$defs/authProviderOAuth2" },
              { "$ref": "#/$defs/authProviderApp2App" },
              { "$ref": "#/$defs/authProviderWebview" }
            ]
          }
        }
      },
      "additionalProperties": false
    }
  }
}
