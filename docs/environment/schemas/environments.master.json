{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amorphie.io/schemas/environment/environments",
  "title": "Environments Configuration",
  "description": "Uygulama başlatıldığında hangi environment (stage) ile çalışacağını ve authentication yapılandırmasını belirleyen konfigürasyon.",
  "type": "object",
  "required": ["multiStageMode", "defaultStage", "stages"],
  "properties": {
    "multiStageMode": {
      "type": "string",
      "description": "Multi-stage davranış modu",
      "enum": ["never", "onStartup", "onProfile"],
      "default": "never",
      "x-enumDescriptions": {
        "never": "Her zaman defaultStage kullanılır, kullanıcı değiştiremez",
        "onStartup": "Uygulama başlangıcında stage seçim workflow gösterilir",
        "onProfile": "Uygulama default ile başlar, profil sayfasından değiştirilebilir"
      }
    },
    "defaultStage": {
      "type": "string",
      "description": "Varsayılan stage key'i. stages array'indeki bir key ile eşleşmeli.",
      "minLength": 1,
      "examples": ["localhost", "pilot", "prod"]
    },
    "selector-workflow": {
      "$ref": "#/$defs/functionEndpoint",
      "description": "Stage seçimi için backend-driven workflow tanımı. multiStageMode='onStartup' olduğunda kullanılır."
    },
    "stages": {
      "type": "array",
      "description": "Kullanılabilir environment (stage) listesi",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/stage"
      }
    }
  },
  "additionalProperties": false,

  "$defs": {
    "requiredToken": {
      "type": "object",
      "description": "Endpoint çağrısı için gerekli token tanımı. provider auth provider key'i, token ise access veya refresh gibi token tipidir.",
      "required": ["provider", "token"],
      "properties": {
        "provider": {
          "type": "string",
          "description": "Auth provider key'i",
          "examples": ["morph-idm-device", "morph-idm-1fa", "morph-idm-2fa", "edevlet"]
        },
        "token": {
          "type": "string",
          "description": "Token tipi (tokenTypes içindeki key)",
          "examples": ["access", "refresh"]
        }
      },
      "additionalProperties": false
    },

    "functionEndpoint": {
      "type": "object",
      "description": "Amorphie function endpoint tanımı. Client bu bilgilerle URL oluşturur.",
      "required": ["level", "domain", "workflow", "function"],
      "properties": {
        "runtime": {
          "type": "string",
          "description": "Workflow runtime versiyonu",
          "enum": ["v1", "v2"],
          "default": "v2"
        },
        "level": {
          "type": "string",
          "description": "Endpoint seviyesi",
          "enum": ["instance", "workflow", "domain"],
          "x-enumDescriptions": {
            "instance": "/{domain}/workflows/{workflow}/instances/{key}/functions/{function}",
            "workflow": "/{domain}/workflows/{workflow}/functions/{function}",
            "domain": "/{domain}/functions/{function}"
          }
        },
        "domain": {
          "type": "string",
          "description": "Workflow domain'i",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["discovery", "morph-idm", "loan"]
        },
        "workflow": {
          "type": "string",
          "description": "Workflow adı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["enviroment", "mobile-login", "device-register"]
        },
        "key": {
          "type": "string",
          "description": "Instance key (level='instance' olduğunda gerekli)",
          "examples": ["localhost", "pilot", "mobile-app"]
        },
        "function": {
          "type": "string",
          "description": "Function adı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["enviroment", "config"]
        },
        "requiredToken": {
          "type": "array",
          "description": "Bu endpoint'i çağırmak için gerekli token'lar (öncelik sırasına göre)",
          "items": { "$ref": "#/$defs/requiredToken" }
        }
      },
      "additionalProperties": false,
      "if": {
        "properties": { "level": { "const": "instance" } }
      },
      "then": {
        "required": ["level", "domain", "workflow", "key", "function"]
      }
    },

    "grantFlow": {
      "type": "object",
      "description": "Token almak için çalıştırılacak workflow",
      "required": ["runtime", "domain", "workflow"],
      "properties": {
        "runtime": {
          "type": "string",
          "enum": ["v1", "v2"],
          "default": "v2"
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "workflow": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "requiredToken": {
          "type": "array",
          "description": "Bu akışı başlatmak için gerekli token'lar",
          "items": { "$ref": "#/$defs/requiredToken" }
        }
      },
      "additionalProperties": false
    },

    "tokenStorage": {
      "type": "object",
      "description": "Token'ın DataManager'da hangi context ve key'de saklanacağı",
      "required": ["context", "key"],
      "properties": {
        "context": {
          "type": "string",
          "description": "DataManager context'i",
          "enum": ["device", "user", "secureMemory"],
          "x-enumDescriptions": {
            "device": "Secure Storage (şifresiz - bootstrap). Uzun ömürlü device token'ları için.",
            "user": "Secure Storage + Encrypted. Uzun ömürlü kullanıcı token'ları (1fa, refresh) için.",
            "secureMemory": "In-Memory ONLY. Kısa ömürlü, volatile token'lar (2fa access, OAuth2 access) için."
          }
        },
        "key": {
          "type": "string",
          "description": "DataManager storage key'i",
          "pattern": "^auth\\.token\\.",
          "examples": [
            "auth.token.morph-idm-device.access",
            "auth.token.morph-idm-2fa.access",
            "auth.token.morph-idm-2fa.refresh",
            "auth.token.edevlet.access"
          ]
        }
      },
      "additionalProperties": false
    },

    "logout": {
      "type": "object",
      "description": "Logout ve auto-logout ayarları. Provider seviyesinde tanımlanır, tüm token'ları temizler.",
      "properties": {
        "endpoint": {
          "type": "string",
          "description": "Backend logout endpoint path'i"
        },
        "autoLogoutAtBackground": {
          "type": "string",
          "description": "App background'a geçtiğinde kaç süre sonra otomatik logout",
          "examples": ["5m", "3m"]
        },
        "autoLogoutAtInactivity": {
          "type": "string",
          "description": "Kullanıcı inaktivitesi sonrası otomatik logout",
          "examples": ["15m", "10m"]
        }
      },
      "additionalProperties": false
    },

    "accessToken": {
      "type": "object",
      "description": "Access token tanımı",
      "required": ["expiry", "storage"],
      "properties": {
        "expiry": {
          "type": "string",
          "description": "Token geçerlilik süresi",
          "examples": ["infinite", "90d", "5m", "1h"]
        },
        "storage": { "$ref": "#/$defs/tokenStorage" }
      },
      "additionalProperties": false
    },

    "refreshToken": {
      "type": "object",
      "description": "Refresh token tanımı. Access token expire olmadan önce bu token ile yenileme yapılır.",
      "required": ["expiry", "endpoint", "strategy", "beforeExpiry", "storage"],
      "properties": {
        "expiry": {
          "type": "string",
          "description": "Refresh token geçerlilik süresi",
          "examples": ["30d", "7d", "1d"]
        },
        "endpoint": {
          "type": "string",
          "description": "Refresh endpoint path'i"
        },
        "strategy": {
          "type": "string",
          "description": "Refresh stratejisi",
          "enum": ["rotating", "extend"],
          "x-enumDescriptions": {
            "rotating": "Her refresh'te yeni access ve refresh token döner, eski token'lar invalid olur",
            "extend": "Mevcut token'ın expiry'si extend edilir"
          }
        },
        "beforeExpiry": {
          "type": "string",
          "description": "Access token expire olmadan ne kadar önce refresh yapılır",
          "examples": ["1m", "5m", "30s"]
        },
        "storage": { "$ref": "#/$defs/tokenStorage" }
      },
      "additionalProperties": false
    },

    "authProvider": {
      "type": "object",
      "description": "Auth provider tanımı. Tüm provider'lar OAuth2 tabanlıdır, grant mekanizması farklılaşır.",
      "required": ["key", "type", "tokenTypes"],
      "properties": {
        "key": {
          "type": "string",
          "description": "Provider benzersiz tanımlayıcısı",
          "examples": ["morph-idm-device", "morph-idm-1fa", "morph-idm-2fa", "edevlet", "burgan-yatirim", "fxtrade"]
        },
        "type": {
          "type": "string",
          "description": "Protokol tipi. Tüm provider'lar OAuth2 tabanlıdır.",
          "const": "oauth2"
        },
        "identityClaims": {
          "type": "object",
          "description": "JWT token claim'lerinden identity bilgisi çıkarmak için mapping. Tanımlıysa bu provider identity kaynağıdır. Tanımlı olmayan provider'lar (device, edevlet vb.) identity'ye katkı yapmaz.",
          "properties": {
            "user": {
              "type": "string",
              "description": "Kullanıcı (operatör) bilgisini içeren JWT claim adı",
              "examples": ["act"]
            },
            "scope": {
              "type": "string",
              "description": "Müşteri/kapsam bilgisini içeren JWT claim adı",
              "examples": ["sub"]
            }
          },
          "required": ["user", "scope"],
          "additionalProperties": false
        },
        "grantFlow": {
          "$ref": "#/$defs/grantFlow",
          "description": "Token almak için çalıştırılacak workflow (Amorphie workflow ile grant)"
        },
        "logout": {
          "$ref": "#/$defs/logout",
          "description": "Logout ayarları (tüm token'ları temizler)"
        },
        "authorizationUrl": {
          "type": "string",
          "format": "uri",
          "description": "OAuth2 Authorization Code flow: Authorization endpoint URL (harici OAuth2 provider'lar için)"
        },
        "tokenUrl": {
          "type": "string",
          "format": "uri",
          "description": "OAuth2 Authorization Code flow: Token endpoint URL (harici OAuth2 provider'lar için)"
        },
        "clientId": {
          "type": "string",
          "description": "OAuth2 client ID"
        },
        "scopes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "OAuth2 scope'ları"
        },
        "pkce": {
          "type": "boolean",
          "default": true,
          "description": "PKCE (Proof Key for Code Exchange) desteği"
        },
        "scheme": {
          "type": "string",
          "description": "App2App grant: Deep link scheme (native app açma)",
          "examples": ["burganyatirim://auth"]
        },
        "fallbackUrl": {
          "type": "string",
          "format": "uri",
          "description": "App2App grant: App yüklü değilse yönlendirilecek URL"
        },
        "callbackScheme": {
          "type": "string",
          "description": "App2App grant: Geri dönüş scheme'i"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Webview grant: Embedded webview login URL'i"
        },
        "callbackPattern": {
          "type": "string",
          "description": "Webview grant: Callback URL pattern"
        },
        "tokenExchange": {
          "type": "object",
          "description": "Harici provider token'ını core token'a çevirmek için endpoint",
          "properties": {
            "endpoint": { "type": "string" }
          },
          "additionalProperties": false
        },
        "tokenTypes": {
          "type": "object",
          "description": "Token tipleri. access (zorunlu) ve refresh (opsiyonel) token tanımları.",
          "required": ["access"],
          "properties": {
            "access": { "$ref": "#/$defs/accessToken" },
            "refresh": { "$ref": "#/$defs/refreshToken" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "stage": {
      "type": "object",
      "description": "Bir environment (stage) tanımı",
      "required": ["key", "title", "baseUrl", "authProviders"],
      "properties": {
        "key": {
          "type": "string",
          "description": "Stage benzersiz tanımlayıcısı",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["localhost", "pilot", "prod"]
        },
        "title": {
          "type": "string",
          "description": "Stage görünen adı (UI'da gösterilir)",
          "examples": ["Local Development", "Pilot", "Production"]
        },
        "baseUrl": {
          "type": "string",
          "description": "API base URL",
          "format": "uri"
        },
        "wsUrl": {
          "type": "string",
          "description": "WebSocket URL",
          "format": "uri"
        },
        "mqttUrl": {
          "type": "string",
          "description": "MQTT broker URL",
          "format": "uri"
        },
        "configEndpoint": {
          "$ref": "#/$defs/functionEndpoint",
          "description": "Client config endpoint tanımı"
        },
        "authProviders": {
          "type": "array",
          "description": "Auth provider'lar listesi. Her auth seviyesi ayrı provider olarak tanımlanır.",
          "items": {
            "$ref": "#/$defs/authProvider"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
